

@model AddPasswordModel

<div class="col-sm-3 mt-4">
    
    <div class="card card-columns card-group">
        <div class="card-header">
            <h4 class="card-title">Set Password</h4>
        </div>
        <div class="card-header">
            <p class="text-info text-bold" style="color:black !important">
                You have used an external account to login and do not have a local username and
                password. Simply set a new password if you want to login using a local account.
                Use your email as the username.
            </p>
        </div>
        <div class="card-body">
            <form asp-action="AddPassword" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>New Password</label>
                    <input asp-for="NewPassword" class="form-control" placeholder="New Password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Set Password" class="btn btn-primary pull-right" />
                </div>

            </form>
        </div>
        @if (TempData["ErrorAddPassword"] != null)
        {
            <div class="card-footer alert alert-warning notification">
                @TempData["ErrorAddPassword"]
            </div>
        }
    </div>
</div>