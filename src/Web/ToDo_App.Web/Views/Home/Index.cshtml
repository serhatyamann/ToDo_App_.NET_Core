
@model GetAuthenticatedUserVM
@{
    ViewData["Title"] = "Home Page";
}


<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.0/css/ionicons.min.css" integrity="sha512-JApjWRnfonFeGBY7t4yq8SWr1A6xVYEJgO/UMIYONxaR3C9GETKUg0LharbJncEzJF5Nmiv+Pr5QNulr81LjGQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/css/ionicons.min.css" rel="stylesheet" />
</head>

<body>


    @if (User.Identity.IsAuthenticated)
    {
        @if (TempData["SuccessAddPassword"] != null)
        {
            <div class="card-footer alert alert-success notification">
                @TempData["SuccessAddPassword"]
            </div>
        }
        @if (TempData["ChangePasswordSuccess"] != null)
        {
            <div class="card-footer alert alert-success notification">
                @TempData["ChangePasswordSuccess"]
            </div>
        }
        <div class="container" style="width:100%;height:100%;">
            <div class="col-sm-4" style="margin-top:100px;">

                <div style="background-color: #007bff; " class="small-box">
                    <div class="inner">
                        <h3 class="text-center">@Model.TotalCategories</h3>
                        <p class="text-center">Categories</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                </div>

                <div class="small-box" style="background-color:#28a745; ">
                    <div class="inner">
                        <h3 class="text-center">@Model.CompleteCount</h3>
                        <p class="text-center">Completed Reminders</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-android-done-all"></i>
                    </div>
                </div>

                <div class="small-box" style="background-color: #dc3545;">
                    <div class="inner">
                        <h3 class="text-center">@Model.IncompleteCount</h3>
                        <p class="text-center">Incomplete Reminders</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-information-circled"></i>
                    </div>
                </div>
            </div>

            <div class="col-sm-4" style="margin-top:50px;">
                <div class="text-center align-middle media-middle">

                    <img src="@Model.ImagePath" alt="Error while loading pp!" class="img-circle" width="350">
                </div>
            </div>

            <div class="col-sm-4" style="margin-top:100px;">
                <h1 class="display-4">Hello,<span style="font-style:oblique;"> @Model.FullName!</span></h1>
                <h3 class="display-4">You can now use TO-DO features!</h3>
                <table style="width:100%;align-items:center">
                    <tr>
                        <td><h4 class="display-4"><span class="label label-primary">Username:</span></h4></td>
                        <td><h4 style="font-style:oblique">@Model.UserName</h4></td>
                    </tr>
                    <tr>
                        <td><h4 class="display-4"><span class="label label-primary">E-mail:</span></h4></td>
                        <td><h4 style="font-style:oblique">@Model.Email</h4></td>
                    </tr>
                    <tr>
                        <td><h4 class="display-4"><span class="label label-primary">Register Date:</span></h4></td>
                        <td><h4 style="font-style:oblique">@Model.CreateDate</h4></td>
                    </tr>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="text-center align-middle media-middle">
            <h1 class="display-4">Hello, please log in to use our features!</h1>
            <br />
        </div>
    }

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>
